{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "~/.config/opencode/coding-rules.md"
  ],
  "theme": "opencode",
  "autoupdate": true,
  "formatter": {
    "prettier": {
      "command": ["prettier", "--write", "$FILE"],
      "extensions": [".js", ".ts", ".jsx", ".tsx", ".json", ".md"]
    }
  }
}